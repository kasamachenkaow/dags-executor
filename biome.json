{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "json": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space"
    }
  },
  "javascript": {
    "formatter": {
      "indentWidth": 2,
      "indentStyle": "space",
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "complexity": {
        "useArrowFunction": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      }
    }
  }
}
